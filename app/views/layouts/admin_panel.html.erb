<!DOCTYPE html>
<html>
  <head>
    <title>Olemwa Chess Club - Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-gray-100">
    <!-- Navigation Sidebar -->
    <div class="flex h-screen">
      <!-- Sidebar -->
      <div class="w-64 bg-gray-900 text-white flex-shrink-0">
        <div class="p-6">
          <h1 class="text-2xl font-bold">Olemwa Chess</h1>
          <p class="text-sm text-gray-400">Admin Dashboard</p>
        </div>
        
        <nav class="mt-6">
          <%= link_to admin_panel_dashboard_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{current_page?(admin_panel_dashboard_path) ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Dashboard
          <% end %>
          
          <%= link_to edit_admin_panel_about_page_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{current_page?(edit_admin_panel_about_page_path) ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            About Page
          <% end %>
          
          <%= link_to admin_panel_projects_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{request.path.start_with?('/admin/projects') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            Projects
          <% end %>
          
          <%= link_to admin_panel_blogs_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{request.path.start_with?('/admin/blogs') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
            Blogs
          <% end %>
          
          <%= link_to admin_panel_events_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{request.path.start_with?('/admin/events') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Events
          <% end %>
          
          <%= link_to admin_panel_leadership_profiles_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{request.path.start_with?('/admin/leadership_profiles') ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Leadership
          <% end %>
          
          <%= link_to edit_admin_panel_homepage_content_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{current_page?(edit_admin_panel_homepage_content_path) ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
            Homepage
          <% end %>
          
          <%= link_to edit_admin_panel_contact_info_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{current_page?(edit_admin_panel_contact_info_path) ? 'bg-gray-800 text-white' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Contact Info
          <% end %>
          
          
          <% if current_admin.admin? %>
            <%= link_to admin_panel_admins_path, class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{request.path.start_with?('/admin_panel/admins') ? 'bg-gray-800 text-white' : ''}" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              Admins
            <% end %>
          <% end %>
        </nav>
        
        <!-- User Info & Logout -->
        <div class="absolute bottom-0 w-64 p-6 border-t border-gray-800">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center">
                <span class="text-sm font-medium"><%= current_admin.name.first %></span>
              </div>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium"><%= current_admin.name %></p>
              <p class="text-xs text-gray-400"><%= current_admin.role.titleize %></p>
            </div>
            <%= button_to destroy_admin_session_path, method: :delete, class: "text-gray-400 hover:text-white" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
        <header class="bg-white shadow-sm">
          <div class="px-8 py-4">
            <h2 class="text-2xl font-bold text-gray-800">
              <%= content_for?(:page_title) ? yield(:page_title) : 'Dashboard' %>
            </h2>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="mx-8 mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="mx-8 mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            <%= alert %>
          </div>
        <% end %>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto p-8">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
