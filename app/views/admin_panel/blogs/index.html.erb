<% content_for :page_title, "Blog Posts" %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold">All Blog Posts</h2>
  <%= link_to new_admin_panel_blog_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Blog Post
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Published</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% if @blogs.any? %>
        <% @blogs.each do |blog| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <% if blog.cover_image.attached? %>
                  <%= image_tag blog.cover_image, class: "h-10 w-10 rounded-lg object-cover mr-3" %>
                <% else %>
                  <div class="h-10 w-10 rounded-lg bg-gray-200 mr-3 flex items-center justify-center">
                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= blog.title %></div>
                  <div class="text-xs text-gray-500"><%= blog.slug %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= blog.admin.name %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= blog.published? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= blog.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= blog.published_at&.strftime("%b %d, %Y") || 'N/A' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", admin_panel_blog_path(blog), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <%= link_to "Edit", edit_admin_panel_blog_path(blog), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <%= button_to "Delete", admin_panel_blog_path(blog), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="px-6 py-12 text-center text-gray-500">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
            <p class="mt-2">No blog posts yet</p>
            <%= link_to "Write your first post", new_admin_panel_blog_path, class: "text-blue-600 hover:text-blue-800 mt-2 inline-block" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
