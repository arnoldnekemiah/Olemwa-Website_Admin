<% content_for :page_title, "Olemwa Sports Club Team" %>

<div class="flex justify-between items-center mb-6">
  <%= link_to new_admin_panel_leadership_profile_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Add Team Member
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% if @leadership_profiles.any? %>
    <% @leadership_profiles.each do |profile| %>
      <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition">
        <% if profile.photo.attached? %>
          <%= image_tag profile.photo, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
            <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
        <% end %>
        
        <div class="p-6">
          <h3 class="text-xl font-bold mb-1"><%= profile.name %></h3>
          <p class="text-sm text-blue-600 mb-3"><%= profile.role %></p>
          <p class="text-sm text-gray-600 mb-4 line-clamp-3"><%= profile.bio %></p>
          
          <div class="flex justify-between items-center text-xs text-gray-500">
            <span>Position: <%= profile.position_order %></span>
          </div>
          
          <div class="mt-4 flex space-x-2">
            <%= link_to "View", admin_panel_leadership_profile_path(profile), class: "flex-1 text-center px-3 py-2 bg-blue-100 text-blue-700 rounded hover:bg-blue-200" %>
            <%= link_to "Edit", edit_admin_panel_leadership_profile_path(profile), class: "flex-1 text-center px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
            <%= button_to "Delete", admin_panel_leadership_profile_path(profile), method: :delete, data: { confirm: "Are you sure?" }, class: "flex-1 px-3 py-2 bg-red-100 text-red-700 rounded hover:bg-red-200" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-span-3">
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <p class="mt-4 text-gray-500">No leadership profiles yet</p>
        <%= link_to "Add your first leader", new_admin_panel_leadership_profile_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
  <% end %>
</div>
