<% content_for :page_title, @leadership_profile.name %>

<div class="mb-6">
  <%= link_to admin_panel_leadership_profiles_path, class: "text-blue-600 hover:text-blue-800 flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Leadership Team
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden max-w-2xl">
  <% if @leadership_profile.photo.attached? %>
    <%= image_tag @leadership_profile.photo, class: "w-full h-64 object-cover" %>
  <% end %>
  
  <div class="p-8">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h1 class="text-3xl font-bold mb-2"><%= @leadership_profile.name %></h1>
        <p class="text-xl text-blue-600"><%= @leadership_profile.role %></p>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_admin_panel_leadership_profile_path(@leadership_profile), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md" %>
        <%= button_to "Delete", admin_panel_leadership_profile_path(@leadership_profile), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md" %>
      </div>
    </div>

    <div class="mb-4">
      <span class="text-sm text-gray-500">Display Order: <%= @leadership_profile.position_order %></span>
    </div>

    <div class="prose max-w-none">
      <%= simple_format(@leadership_profile.bio) %>
    </div>
  </div>
</div>
