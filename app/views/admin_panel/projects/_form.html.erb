<% content_for :page_title, @project.new_record? ? "New Project" : "Edit Project" %>

<div class="max-w-3xl">
  <%= form_with model: @project, url: @project.new_record? ? admin_panel_projects_path : admin_panel_project_path(@project), class: "space-y-6" do |form| %>
    <% if @project.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
        <h3 class="font-medium">Please fix the following errors:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg p-6 space-y-6">
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Project title" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 6, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Project description..." %>
      </div>

      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status, Project.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :cover_image, class: "blocktext-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :cover_image, accept: "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        <% if @project.cover_image.attached? %>
          <div class="mt-4">
            <%= image_tag @project.cover_image, class: "w-48 h-48 object-cover rounded-lg" %>
          </div>
        <% end %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :published, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        <%= form.label :published, "Publish this project", class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>

    <div class="flex justify-between">
      <%= link_to "Cancel", admin_panel_projects_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      <%= form.submit @project.new_record? ? "Create Project" : "Update Project", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md" %>
    </div>
  <% end %>
</div>
