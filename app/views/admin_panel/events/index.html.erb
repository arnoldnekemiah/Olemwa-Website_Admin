<% content_for :page_title, "Events" %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold">All Events</h2>
  <%= link_to new_admin_panel_event_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Event
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900"><%= event.title %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= event.event_date.strftime("%b %d, %Y at %I:%M %p") %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= event.location %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= event.upcoming? ? 'bg-blue-100 text-blue-800' : event.ongoing? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= event.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", admin_panel_event_path(event), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <%= link_to "Edit", edit_admin_panel_event_path(event), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <%= button_to "Delete", admin_panel_event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="px-6 py-12 text-center text-gray-500">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="mt-2">No events yet</p>
            <%= link_to "Create your first event", new_admin_panel_event_path, class: "text-blue-600 hover:text-blue-800 mt-2 inline-block" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
