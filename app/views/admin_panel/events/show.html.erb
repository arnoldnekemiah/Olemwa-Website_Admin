<% content_for :page_title, @event.title %>

<div class="mb-6">
  <%= link_to admin_panel_events_path, class: "text-blue-600 hover:text-blue-800 flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Events
  <% end %>
</div>

<div class="bg-white rounded-lg shadow p-8">
  <div class="flex items-center justify-between mb-6">
    <span class="px-3 py-1 text-sm font-semibold rounded-full <%= @event.upcoming? ? 'bg-blue-100 text-blue-800' : @event.ongoing? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
      <%= @event.status.titleize %>
    </span>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_admin_panel_event_path(@event), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md" %>
      <%= button_to "Delete", admin_panel_event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md" %>
    </div>
  </div>

  <h1 class="text-3xl font-bold mb-4"><%= @event.title %></h1>

  <div class="grid grid-cols-2 gap-6 mb-6">
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-2">Date & Time</h3>
      <p class="text-lg"><%= @event.event_date.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-2">Location</h3>
      <p class="text-lg"><%= @event.location %></p>
    </div>
  </div>

  <% if @event.registration_url.present? %>
    <div class="mb-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Registration</h3>
      <%= link_to @event.registration_url, @event.registration_url, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
    </div>
  <% end %>

  <div>
    <h3 class="text-sm font-medium text-gray-500 mb-2">Description</h3>
    <div class="prose max-w-none">
      <%= simple_format(@event.description) %>
    </div>
  </div>
</div>
