<% content_for :page_title, "Dashboard" %>

<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <!-- Stats Cards -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600">Total Projects</p>
        <p class="text-3xl font-bold text-gray-900"><%= @projects_count %></p>
      </div>
      <div class="bg-blue-100 rounded-full p-3">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600">Blog Posts</p>
        <p class="text-3xl font-bold text-gray-900"><%= @blogs_count %></p>
      </div>
      <div class="bg-green-100 rounded-full p-3">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600">Events</p>
        <p class="text-3xl font-bold text-gray-900"><%= @events_count %></p>
      </div>
      <div class="bg-purple-100 rounded-full p-3">
        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600">Admins</p>
        <p class="text-3xl font-bold text-gray-900"><%= @admins_count %></p>
      </div>
      <div class="bg-red-100 rounded-full p-3">
        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Blogs -->
  <div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold">Recent Blog Posts</h3>
        <%= link_to "View All", admin_panel_blogs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @recent_blogs.any? %>
        <% @recent_blogs.each do |blog| %>
          <div class="p-4 hover:bg-gray-50">
            <%= link_to admin_panel_blog_path(blog), class: "block" do %>
              <h4 class="font-medium text-gray-900"><%= blog.title %></h4>
              <p class="text-sm text-gray-600 mt-1">
                <%= blog.status.titleize %> â€¢ 
                <%= blog.created_at.strftime("%b %d, %Y") %>
              </p>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="p-4 text-center text-gray-500">
          No blog posts yet
        </div>
      <% end %>
    </div>
  </div>

  <!-- Upcoming Events -->
  <div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold">Upcoming Events</h3>
        <%= link_to "View All", admin_panel_events_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @upcoming_events.any? %>
        <% @upcoming_events.each do |event| %>
          <div class="p-4 hover:bg-gray-50">
            <%= link_to admin_panel_event_path(event), class: "block" do %>
              <h4 class="font-medium text-gray-900"><%= event.title %></h4>
              <p class="text-sm text-gray-600 mt-1">
                <%= event.event_date.strftime("%b %d, %Y at %I:%M %p") %>
              </p>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="p-4 text-center text-gray-500">
          No upcoming events
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Quick Actions -->
<div class="mt-8">
  <h3 class="text-lg font-semibold mb-4">Quick Actions</h3>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <%= link_to new_admin_panel_project_path, class: "bg-white rounded-lg shadow p-4 hover:shadow-md transition flex items-center" do %>
      <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="font-medium">New Project</span>
    <% end %>
    
    <%= link_to new_admin_panel_blog_path, class: "bg-white rounded-lg shadow p-4 hover:shadow-md transition flex items-center" do %>
      <svg class="w-6 h-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="font-medium">New Blog Post</span>
    <% end %>
    
    <%= link_to new_admin_panel_event_path, class: "bg-white rounded-lg shadow p-4 hover:shadow-md transition flex items-center" do %>
      <svg class="w-6 h-6 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="font-medium">New Event</span>
    <% end %>
    
    <%= link_to new_admin_panel_leadership_profile_path, class: "bg-white rounded-lg shadow p-4 hover:shadow-md transition flex items-center" do %>
      <svg class="w-6 h-6 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="font-medium">New Leader</span>
    <% end %>
  </div>
</div>
